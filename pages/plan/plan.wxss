.plan {
  font-size: 14px;
}

.img-view, .shape, .header {
  position: absolute;
  top: 0;
  bottom: 75%;
  right: 0;
  left: 0;
  overflow: hidden;
}

.shape {
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}

.header {
  z-index: 2;
  color: #fff;
  padding: 20px;
  position: relative;
}

.back {
  position: absolute;
  top: 20px;
  right: 20px;
  padding: 5px 10px;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 5px;
}

.img {
  width: 100%;
  position: absolute;
  top: -120%;
}

.nav, .main {
  position: absolute;
  right: 0;
  left: 0;
}

.nav {
  top: 25%;
  bottom: 67%;
  line-height: 50px;
  display: flex;
  overflow-x: auto;
  overflow-y: hidden;
}

.main {
  top: 33%;
  bottom: 0;
  overflow-y: auto;
  overflow-x: hidden;
}

.nav-active, .nav-no-active {
  flex: 0 0 25%;
  text-align: center;
  letter-spacing: 1px;
}

.nav-no-active {
  color: #ccc;
  font-size: 14px;
}

.nav-active {
  color: #2c2c2c;
  font-size: 16px;
  position: relative;
}

.nav-active::after {
  position: absolute;
  bottom: 6px;
  left: 50%;
  transform: translateX(-50%);
  content: "";
  height: 1px;
  width: 20px;
  background-color: #4090f7;
}

.item-box, .item-add-box {
  padding: 10px;
  color: #595959;
  position: relative;
}

.item-add-box{
  padding-bottom: 20px;
}

.item-box {
  border-bottom: 5px solid #f6f6f6;
}

.item-hd {
  color: #272727;
}

.button {
  font-size: 14px;
  width: 80px;
  margin: 0;
  background-color: #555;
  border-color: #555;
  color: #fff;
  padding-left: 10px;
  padding-right: 10px;
  line-height: 25px;
  z-index: 10;
}

.button-del {
  position: absolute;
  bottom: 13px;
  right: 10px;
}

.button-edit {
  position: absolute;
  bottom: 47px;
  right: 10px;
}

.item-input {
  flex: 1;
  font-size: 14px;
}

.input-edit {
  border-bottom: 1px dashed #ccc;
}

.item {
  height: 1.4rem;
  line-height: 1.5rem;
  display: flex;
}
